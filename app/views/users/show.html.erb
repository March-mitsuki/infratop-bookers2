<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <%= render "user_info", user: @user%>
        </div>
        <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |item| %>
                        <tr>
                            <td>
                                <%= image_tag item.user.get_profile_image(50,50) %>
                            </td>
                            <td>
                                <%= item.title %>
                            </td>
                            <td>
                                <%= item.body %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>